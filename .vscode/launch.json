    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Elo web service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./elo-web-service",
            "args": [
                "--config-path",
                "./config/config.dev.yaml"
            ],
            "envFile": "${workspaceFolder}/elo-web-service/.env"
        },
        {
            "name": "Launch Elo web service (docker)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./elo-web-service",
            "args": [
                "--config-path",
                "./config/config.docker.yaml"
            ],
            "envFile": "${workspaceFolder}/elo-web-service/.env.docker"
        },
{
            "name": "Run migrations",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./elo-web-service",
            "args": [
                "--config-path",
                "./config/config.dev.yaml",
                "--migrate-db"
            ],
            "envFile": "${workspaceFolder}/elo-web-service/.env"
        },
        {
            "name": "Run migrations (docker)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./elo-web-service",
            "args": [
                "--migrate-db-dsn",
                "postgres://elo:devpassword@localhost:5433/elo?sslmode=disable"
            ]
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/nextjs/node_modules/next/dist/bin/next",
            "runtimeArgs": [
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/nextjs",
            "serverReadyAction": {
                "action": "debugWithChrome",
                "killOnServerStop": true,
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "webRoot": "${workspaceFolder}"
            }
        },
    ],
    "compounds": [
        {
            "name": "Run both",
            "configurations": [
                "Run migrations",
                "Launch Elo web service",
                "Next.js: debug full stack"
            ]
        },
        {
            "name": "Run both (docker)",
            "configurations": [
                "Run migrations (docker)",
                "Launch Elo web service (docker)",
                "Next.js: debug full stack"
            ]
        }
    ]
}